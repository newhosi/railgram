<div class="flex flex-row items-center w-full space-x-7">
  <div><%= link_to gravatar_for(current_user, size: 100), current_user%></div>
  <div class="flex flex-col justify-start space-y-3">
    <h3 class="font-semibold text-2xl"><%= current_user.name %></h3>
    <div class="flex flex-row text-gray-500 text-xs font-bold space-x-4">
      <div><%= pluralize(current_user.microposts.count, "micropost") %></div>
      <% @user ||= current_user %>
      <div>
        <%= @user.following.count %>
        <%= link_to "following", following_user_path(@user), data: { turbo: false } %>
      </div>
      <div>
        <%= followers ||= @user.followers.count %>
        <%= link_to "followers", followers_user_path(@user), data: { turbo: false } %>
      </div>
    </div>
  </div>
</div>
