<% provide(:title, 'Log in') %>
<div class="w-1/2">
  <%= form_with scope: :session, url: login_path, class: "flex flex-col space-y-2", data: { turbo:
  false } do |f| %>

  <div class="flex flex-col w-full">
    <%= f.label :email, class: "font-bold" %> <%= f.email_field :email%>
  </div>

  <div class="flex flex-col w-full">
    <div class="flex flex-row space-x-2 items-center">
      <%= f.label :password, class: "font-bold" %> <%= link_to "(forget password?)",
      new_password_reset_path, class: "underline text-sky-700 text-xs"%>
    </div>
    <%= f.password_field :password%>
  </div>

  <div class="flex flex-row w-full items-center">
    <%= f.label :remember_me do %> <%= f.check_box :remember_me, class: "mr-4"%>
    <span class="text-sm">Remember me on this computer</span>
    <% end %>
  </div>

  <div class="flex flex-col w-full">
    <%= f.submit "Log in", class: "text-white rounded p-1 bg-sky-300 hover:bg-sky-500" %>
  </div>

  <% end %>

  <div>New user? <%= link_to "Sign up now!", signup_path, class: "underline text-sky-700"%></div>
</div>
