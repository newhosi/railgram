<% provide(:title, 'Log in') %>
<div class="w-1/2">
  <%= form_with scope: :session, url: login_path, class: "flex flex-col space-y-2", data: { turbo:
  false } do |f| %>

  <div class="flex flex-col w-full">
    <%= f.label :email, class: "font-bold" %> <%= f.email_field :email%>
  </div>

  <div class="flex flex-col w-full">
    <%= f.label :password, class: "font-bold" %> <%= f.password_field :password%>
  </div>

  <div class="flex flex-col w-full">
    <%= f.submit "Log in", class: "text-white rounded p-1 bg-sky-300 hover:bg-sky-500" %>
  </div>

  <% end %>

  <div>New user? <%= link_to "Sign up now!", signup_path, class: "underline text-sky-700"%></div>
</div>
