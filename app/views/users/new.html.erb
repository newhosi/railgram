<% provide(:title, 'Sign up') %>
<div class="w-1/2">
  <%= render 'shared/error_messages' %>
  <%= form_with model: @user, url: signup_path, class: "flex flex-col space-y-2" do |f| %>

  <%= f.label :name, class: "font-bold"%>
  <%= f.text_field :name%>

  <%= f.label :email, class: "font-bold" %>
  <%= f.email_field :email%>

  <%= f.label :password, class: "font-bold" %>
  <%= f.password_field :password%>

  <%= f.label :password_confirmation, "Confirmation", class: "font-bold" %>
  <%= f.password_field :password_confirmation%>

  <%= f.submit "Create my account", class: "text-white	rounded p-1 bg-sky-300 hover:bg-sky-500" %>
  <% end %>
</div>
