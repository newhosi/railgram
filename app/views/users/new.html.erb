<% provide(:title, 'Sign up') %>
<div class="w-1/2">
  <%= render 'shared/error_messages' %> <%= form_with model: @user, url: signup_path, class: "flex
  flex-col space-y-2" do |f| %>

  <div class="flex flex-col w-full">
    <%= f.label :name, class: "font-bold"%> <%= f.text_field :name%>
  </div>

  <div class="flex flex-col w-full">
    <%= f.label :email, class: "font-bold" %> <%= f.email_field :email%>
  </div>

  <div class="flex flex-col w-full">
    <%= f.label :password, class: "font-bold" %> <%= f.password_field :password%>
  </div>

  <div class="flex flex-col w-full">
    <%= f.label :password_confirmation, "Confirmation", class: "font-bold" %>
    <div></div>
    <%= f.password_field :password_confirmation%>
  </div>

  <div class="flex flex-col w-full">
    <%= f.submit "Create my account", class: "text-white rounded p-1 bg-sky-300 hover:bg-sky-500" %>
  </div>

  <% end %>
</div>
