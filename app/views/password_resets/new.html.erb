<% provide(:title, 'Forget password') %>
<div class="w-1/2">
  <%= form_with scope: :password_reset, url: password_resets_path, class: "flex flex-col space-y-2",
  data: { turbo: false } do |f| %>

    <div class="flex flex-col w-full">
      <%= f.label :email, class: "font-bold" %> <%= f.email_field :email%>
    </div>

    <div class="flex flex-col w-full">
      <%= f.submit "Submit", class: "text-white rounded p-1 bg-sky-300 hover:bg-sky-500" %>
    </div>

  <% end %>
</div>
