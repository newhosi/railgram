<div class="h-full bg-black">
  <div class="text-3xl font-semibold p-7 text-white"><%= link_to "sample app", root_path %></div>
  <nav class="flex flex-col text-white h-full justify-between">
    <ul>
      <li class="hover:bg-gray-800 rounded-md mx-2 p-3">
        <%= link_to( root_path, class: "flex flex-row space-x-3" ) do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
          <span>Home</span>
        <% end %>
      </li>
      <li class="hover:bg-gray-800 rounded-md mx-2 p-3">
        <%= link_to(help_path, class: "flex flex-row space-x-3" ) do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z" />
          </svg>
          <span>Help</span>
        <% end %>
      </li>
      <% if logged_in? %>
        <li class="hover:bg-gray-800 rounded-md mx-2 p-3">
          <%= link_to(users_path, class: "flex flex-row space-x-3" ) do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
            </svg>
            <span>Users</span>
          <% end %>
        </li>
      <% end %>
    </ul>
    <ul>
      <div class="pl-5">
        <%= render 'layouts/dropdown' %>
      </div>
      <% if !logged_in? %>
        <li class="hover:bg-gray-800 rounded-md mx-2 p-3">
          <%= link_to(login_path, class: "flex flex-row space-x-3" ) do %>
            <span>Login</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </nav>
</div>
