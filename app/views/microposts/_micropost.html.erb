<li id="micropost-<%= micropost.id %>">
  <div class="flex flex-row items-top py-2">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <div class="flex flex-col pl-5 w-full">
      <div class="flex flex-row justify-between items-center">
        <span class="font-bold text-xs text-blue-700">
          <%= link_to micropost.user.name, micropost.user %>
        </span>
        <% if current_user?(micropost.user) %>
          <div>
            <%= link_to micropost, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="size-3.5 text-red-500 hover:text-red-800"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
      <span>
        <%= micropost.content %>
      </span>
      <span>
        <%= image_tag micropost.picture.url if !micropost.picture.url.nil? %>
      </span>
      <div class="flex flex-row justify-between items-center">
        <span class="font-light	text-xs">
          Posted <%= time_ago_in_words(micropost.created_at) %> ago
        </span>
      </div>
    </div>
  </div>
</li>
