<div class="flex flex-row space-x-0.5 items-center">
  <% if current_user.bookmart? micropost%>
    <%= link_to micropost_bookmark_path(micropost),
                  data: { turbo_method: :delete }, 
                  remote: true do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="size-5 text-blue-400">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
      </svg>
    <% end %>
  <% else %>
    <%= link_to micropost_unbookmark_path(micropost),
                  data: { turbo_method: :post }, 
                  remote: true do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" class="size-5 text-slate-300 hover:text-blue-400">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
      </svg>
    <% end %>
  <% end %>
  <%= bookmark_count_tag(micropost) %>
</div>
