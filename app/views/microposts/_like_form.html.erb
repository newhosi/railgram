<div class="flex flex-row space-x-0.5 items-center">
  <% if current_user.liking? micropost %>
    <%= link_to micropost_like_path(micropost),
                  data: { turbo_method: :delete }, 
                  remote: true do %>
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        viewBox="0 0 24 24" 
        class="size-5 text-red-300 fill-current"
        >
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
      </svg>
    <% end %>
  <% else %>
    <%= link_to micropost_like_path(micropost), 
                  data: { turbo_method: :post }, 
                  remote: true do %>
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        viewBox="0 0 24 24" 
        class="size-5 text-slate-300 hover:text-red-300"
        fill="none" stroke="currentColor" stroke-width="1.5"
        >
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
      </svg>
    <% end %>
  <% end %>
  <div class="text-xs text-slate-400">
    <%= micropost.post_likes.count %>
  </div>
</div>
